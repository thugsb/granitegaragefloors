!!!
%html.no-js{:lang => 'en'}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Granite Garage Floors | Service Request Portal
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{src: 'favicon.ico'}
    %link{href: '//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel: 'stylesheet'}
    %link{href: '//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel: 'stylesheet'}
    %link{href: 'css/application.css', rel: 'stylesheet'}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>

  %body{:class => @body_class ||= "portal", 'data-class_group' => 'Application'}

    .wrapper
      - if flash.any?
        - flash.each_pair do |key, flash|
          .alert{class: "alert-#{key}"}
            .close{'aria-hidden'=>"true", data: {dismiss: "alert"}} &times;
            = flash

      = yield

    %footer.self-service-footer.text-center
      %p Powered by
      %a{:href => "http://www.kickserv.com"}
        %img{src: "img/footer-logo.png"}

    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{src: "js/application.js"}
